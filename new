#!/usr/bin/env sh
set -e


name="$1"

if [ "$(which hugo)" = "" ]
then
  echo "Hugo is not installed. Get it at https://gohugo.io/"
  exit 1
fi

if [ "${name}" = "" ]
then
  echo "Name missing. Try: ./new some-name"
  exit 1
fi

rel="post/${name}.md"
path="content/${rel}"

hugo new -fyaml ${rel}

# Drop draft line. Add summary instead.
sed -e $'3c\\\nsummary: |\n;3i\\\n\ \ ...\n' -i '' ${path}

$EDITOR ${path}
